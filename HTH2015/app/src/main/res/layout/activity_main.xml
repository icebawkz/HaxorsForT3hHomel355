<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/background_gradient">

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Our              App"
        android:id="@+id/button"
        android:background="@drawable/top_left_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ecf0f1" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Useful Numbers"
        android:id="@+id/button3"
        android:background="@drawable/botton_left_button"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ecf0f1" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Tutorial Video"
        android:id="@+id/button2"
        android:background="@drawable/bottom_right_button"
        android:layout_alignTop="@+id/button3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ecf0f1" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Data        Usage"
        android:id="@+id/data_usage"
        android:background="@drawable/top_right_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ecf0f1" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/full_width"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_screenshot"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:src="@drawable/settings_screenshot" />

</RelativeLayout>
